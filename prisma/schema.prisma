generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Intervenant {
  id        Int     @id @default(autoincrement())
  nom       String
  prenom    String
  poste     String
  secteur   String
  photoUrl  String?
  linkedin  String?
  description String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Organisateur {
  id        Int     @id @default(autoincrement())
  nom       String
  prenom    String
  poste     String
  filiere   String
  linkedin  String?
  photoUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Sponsor {
  id        Int     @id @default(autoincrement())
  nom       String
  niveau    String
  logoUrl   String?
  siteWeb   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Entreprise {
  id        Int     @id @default(autoincrement())
  nom       String
  domaine   String
  description String
  logoUrl   String?
  siteWeb   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MediaPartner {
  id        Int     @id @default(autoincrement())
  nom       String
  logoUrl   String?
  siteWeb   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Inscription {
  id        Int      @id @default(autoincrement())
  nom       String
  prenom    String
  email     String
  filiere   String
  ecole     String
  createdAt DateTime @default(now())
}
